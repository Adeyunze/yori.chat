# Base model to use (Hugging Face model ID)
BASE_MODEL=microsoft/Phi-3-mini-4k-instruct

# Path to LoRA adapter directory (leave empty to use base model only)
ADAPTER_DIR=

# Maximum number of tokens to generate in responses
MAX_TOKENS=512

# Memory settings
MEMORY_DIR=./memory

# Embedding model for memory similarity search
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Server settings
HOST=0.0.0.0
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO