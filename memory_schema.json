{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "user_name": {
      "type": "string",
      "description": "User's preferred name"
    },
    "nicknames": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Alternative names or nicknames the user goes by"
    },
    "pronouns": {
      "type": "string",
      "description": "User's preferred pronouns"
    },
    "timezone": {
      "type": "string",
      "description": "User's timezone"
    },
    "style": {
      "type": "object",
      "properties": {
        "emoji_ok": {
          "type": "boolean",
          "description": "Whether the user likes emojis in responses"
        },
        "tone": {
          "type": "string",
          "description": "User's preferred conversation tone"
        },
        "pace": {
          "type": "string",
          "enum": ["fast", "moderate", "slow"],
          "description": "User's preferred conversation pace"
        }
      },
      "additionalProperties": true
    },
    "likes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Things the user enjoys or has positive feelings about"
    },
    "dislikes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Things the user dislikes or has negative feelings about"
    },
    "goals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the goal"
          },
          "title": {
            "type": "string",
            "description": "What the user wants to achieve"
          },
          "status": {
            "type": "string",
            "enum": ["active", "completed", "paused", "abandoned"],
            "description": "Current status of the goal"
          }
        },
        "required": ["id", "title", "status"],
        "additionalProperties": true
      }
    },
    "do_nots": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific things the user has asked not to discuss or do"
    },
    "last_check_in": {
      "type": "string",
      "format": "date-time",
      "description": "When Yori last had a meaningful conversation with the user"
    }
  },
  "additionalProperties": true,
  "description": "Memory schema for Yori's user relationship tracking"
}